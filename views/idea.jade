extends layout

block content
	nav(class='navbar navbar-default navbar-static-top navbar-inverse' role='navigation')
		div(class='navbar-header')
			button(type='button' class='navbar-toggle' data-toggle='collapse' data-target='#menu')
				span(class='sr-only')
				span(class='icon-bar')
				span(class='icon-bar')
				span(class='icon-bar')
			a(class='navbar-brand' href='/main') Idea Hub

		div(id='menu' class='collapse navbar-collapse')
			ul(class='nav navbar-nav')
				li
					a(href='/search') Search
				li
					a(href='/upload') Upload
				if (!user)
					li
						a(href='/home') Login
				else
					li
						a(href='logout') Logout

	div(class='container' style='padding-top: 30px;' id='#{collection._id}')
		h1 #{collection.title}
		if collection.img.data.toString('base64') != ''
			img(src='data:image/png;base64,' + collection.img.data.toString('base64') style='width:200px;')
		else 
			img(src='img/lightbulb.png' style='width:200px;')
		br
		label Pitch:
		p #{collection.pitch}
		label Industry:
		p #{collection.industry}
		label Network:
		p #{collection.university}
		if (user)
			button(class='btn btn-primary' id='likeBtn') Like
			p(id='votemsg')

